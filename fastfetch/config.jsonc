{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",

  "logo": {
    "type": "file",
    "source": "~/.config/fastfetch/arch.txt",
    "padding": {
      "top": 1,
      "left": 2
    }
  },

  "display": {
    "separator": "  "
  },

  "modules": [
    "break",
    "title",

    {
      "type": "os",
      "key": "os     "
    },
    {
      "type": "wm",
      "key": "de     "
    },
    {
      "type": "packages",
      "format": "{} (pacman)",
      "key": "pkgs   "
    },
    {
      "type": "shell",
      "key": "shell  "
    },
    {
      "type": "kernel",
      "key": "kernel "
    },
    {
      "type": "uptime",
      "format": "{2}h {3}m",
      "key": "uptime "
    },
    {
      "type": "command",
      "key": "os age ",
      "text": "birth=$(stat -c %W /); now=$(date +%s); [ \"$birth\" -gt 0 ] && echo \"$(( (now - birth) / 86400 )) days\" || echo \"N/A\""
    },
    {
      "type": "memory",
      "key": "memory "
    },

    "break",
    {
      "type": "colors",
      "symbol": "circle"
    },
    "break"
  ]
}
