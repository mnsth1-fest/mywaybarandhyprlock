1* {
  font-family: JetBrainsMono Nerd Font;
  font-size: 13px;
  font-weight: bold;
  border: none;
  border-radius: 50px;
  min-height: 0;
}

/* ❌ ПОВНІСТЮ прибираємо фон панелі */
window#waybar {
  background: transparent;
  color: #eaeaea;
}

/* ===== LEFT ===== */
#custom-clock {
  padding: 6px 14px;
  margin: 6px 4px 6px 6px;
  background: rgba(40, 40, 40, 0.65);
  border-radius: 50px;
}

#custom-vremya {
  padding: 6px 14px;
  margin: 6px 4px 6px 6px;
  background: rgba(40, 40, 40, 0.65);
  border-radius: 50px;
}

#taskbar {
  padding: 6px 10px;
  margin: 6px;
  background: rgba(40, 40, 40, 0.65);
}

#taskbar button {
  padding: 2px 6px;
  margin: 0 2px;
}

/* ===== CENTER ===== */

/* контейнер */
#workspaces {
  margin: 6px;
  padding: 4px;
  background: rgba(30, 30, 30, 0.65);
  border-radius: 50px;
}

/* кнопки з’єднані */
#workspaces button {
  padding: 6px 12px;
  margin: 0;
  background: transparent;
  color: #aaa;
  border-radius: 0; /* за замовчуванням — прямокутні */
}

/* hover без зсувів */
#workspaces button:hover {
  background: rgba(255, 255, 255, 0.08);
}

/* активний workspace */
#workspaces button.active {
  background: rgba(120, 120, 255, 0.45);
  color: #fff;
}

/* закруглення країв */
#workspaces button:first-child:last-child {
  /* тільки один workspace */
  border-radius: 50px;
}

#workspaces button:first-child:not(:last-child) {
  border-radius: 50px 0 0 50px;
}

#workspaces button:last-child:not(:first-child) {
  border-radius: 0 50px 50px 0;
}


/* ===== RIGHT ===== */
#pulseaudio {
  padding: 6px 14px;
  margin: 6px 4px 6px 6px;
  background: rgba(40, 40, 40, 0.65);
  border-radius: 50px;
}

#network {
  padding: 6px 14px;
  margin: 6px 4px 6px 6px;
  background: rgba(40, 40, 40, 0.65);
  border-radius: 50px;
}

#battery {
  padding: 6px 14px;
  margin: 6px 6px 6px 4px;
  background: rgba(40, 40, 40, 0.65);
  border-radius: 50px;
}

/* Tooltip (наведення) */
tooltip {
  background: rgba(20, 20, 20, 0.9);
  border-radius: 50px;
  padding: 10px;
}
